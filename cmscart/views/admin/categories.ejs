<%- include('../_layouts/adminheader') %>

<h2 class="page-title">Категории</h2>
<a href="/admin/categories/add-category" class="btn btn-primary">Добави категория</a>
<br>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Заглавие
            </th>
            <th>Категория</th>
            <th>Промени</th>
            <td>Изтрий</td>
        </tr>
    </thead>
    <tbody>

        <% categories.forEach(function(category) { %>
        <tr id="id_<%= category._id %>" class="<%= category.slug %>">
            <td>
                <%= category.title %>
            </td>
            <td>
                <%= category.parent == 'null' ? '-' : category.parent %>
            </td>
            <td><a href="/admin/categories/edit-category/<%= category._id %>">Промени</a></td>
            <% if (category.slug == "home" ) { %>
            <td></td>

            <% } else { %>

            <td><a class="confirmDeletion" href="/admin/categories/delete-category/<%= category._id %>">Изтрий</a></td>
            <% } %>

        </tr>
        <% }); %>
    </tbody>
</table>

