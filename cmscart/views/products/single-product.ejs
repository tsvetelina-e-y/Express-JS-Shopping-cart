                    </div>
                    <div class="colors-container">
                        <p>
                            Избери цвят: <span class="current-color">бежов</span>
                        </p>

                        <div class="colors">

                            <ul>
                                <li></li>
                                <li></li>
                                <li></li>
                                <li></li>
                                <li></li>
                            </ul>
                        </div>
                    </div>
                    <div class="offert-container">
                        <!-- <h2>БЕЗПЛАТНА ДОСТАВКА НАД 49.99 ЛВ.</h2> -->

                        <div class="button">

                            <a href="/cart/add/<%=product.slug %>">добави в кошницата</a>
                        </div>
                    </div>
                    <div class="add-to-favourites">
                        <span>Добави в любими</span>
                    </div>
                    <div class="description-container">
                        <p>
                            <%= product.desc %>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


