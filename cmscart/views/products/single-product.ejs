                    </div>
                </div>

                <div class="slider-images-container">
                    <div class="images-list">
                        <li>
                            <img class="img change-main" src="/product_images/<%= product._id %>/<%= product.image %>" >
                        </li>
                        <% galleryImages.forEach(function(image) { %>

                        <% if(image != "thumbs") { %>
                        <li>
                            <img class="img change-main" src="/product_images/<%= product._id %>/gallery/<%= image %>" alt="">
                        </li>

                        <%  } %>

                        <% }); %>
                    </div>
